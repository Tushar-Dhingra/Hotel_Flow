<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Hotel</h1>
    <div class="col-6 offset-3">
        <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hotel[title]"
                    value="<%=hotel.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotel[location]"
                    value="<%=hotel.location %>" required>
                </div>

            <div class="mb-3">
                <label class="form-label" for="price">Hotel Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¹</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hotel[price]" value="<%=hotel.price %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="hotel[description]" required><%= hotel.description%></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image" >Add Images</label>
               <input type="file" name="image" id="image" multiple>
               </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Hotel</button>
            </div>
        </form>
        <a href="/hotels/<%= hotel._id%>">Back To Hotel</a>

    </div>
</div>
